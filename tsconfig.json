{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/@types", "src/__tests__"],
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES6",
    "strict": false,
    "jsx": "react",
    "sourceMap": true,
    "allowJs": false,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": false,
    "moduleResolution": "Node"
  }
}
