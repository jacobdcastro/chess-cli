{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/@types"],
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES3",
    "strict": true,
    "jsx": "react",
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  }
}
